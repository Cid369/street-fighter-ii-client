{{#each characters as |character|}}
  {{log character}}
  <!-- !-- {{> partial}} -->
  <!-- Don't uncomment yet -->

  <div>
    <section data-id="{{character.id}}">
      <p>Character ID: {{character.id}}</p>
      <p>Name: {{character.name}}</p>
      <p>HP: {{character.hp}}</p>
      <p>User-ID: {{character.user_id}}</p>


      <form class="update-character">
        <legend>Update HP</legend>
        <input name="character[hp]" type="number" placeholder="New HP">
        <input type="submit">
      </form>

      <!-- console.log('data-id','work?') -->
      <button class="btn btn-default delete-character">Delete Character</button>
    </section>
  </div>

{{/each}}
